services:
  - type: web
    name: ayatquran
    env: python
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn bot:app --workers 2 --threads 4 --timeout 120
    envVars:
      - key: PYTHON_VERSION
        value: 3.13.4
      - key: WEB_CONCURRENCY
        value: 2
    plan: free
    autoDeploy: true